{
  "name": "whatis.enspiral.com",
  "version": "0.0.0",
  "description": "slide deck for Enspiral",
  "main": "src",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dir": "mkdirp build",
    "clean": "rimraf build/*",
    "push": "gh-pages -d build",
    "server": "ecstatic build -p 5000",
    "build:html": "gulp build-html",
    "build:js": "browserify . -o build/bundle.js",
    "build:css": "myth src/index.css build/bundle.css",
    "build:assets": "cpx \"src/assets/**/*\" build",
    "build": "npm-run-all -s dir clean build:*",
    "watch:reload": "wtch -d build",
    "watch:html": "gulp watch-html",
    "watch:js": "watchify . -o build/bundle.js -dv",
    "watch:css": "myth -w src/index.css build/bundle.css",
    "watch:assets": "cpx \"src/assets/**/*\" build -w",
    "watch:server": "ecstatic-lr build -p 5000",
    "watch": "npm-run-all -p watch:*",
    "develop": "npm-run-all -s dir clean watch",
    "start": "npm-run-all -s build server",
    "deploy": "npm-run-all -s build push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enspiral/whatis.enspiral.com"
  },
  "author": "Enspiral",
  "license": "CC-BY-SA",
  "bugs": {
    "url": "https://github.com/enspiral/whatis.enspiral.com/issues"
  },
  "homepage": "https://github.com/enspiral/whatis.enspiral.com",
  "dependencies": {
    "bespoke": "^1.0.0",
    "bespoke-backdrop": "^1.0.0",
    "bespoke-classes": "^1.0.0",
    "bespoke-hash": "^1.0.0",
    "bespoke-keys": "^1.0.0",
    "bespoke-progress": "^1.0.0",
    "bespoke-scale": "^1.0.1",
    "bespoke-touch": "^1.0.0",
    "browserify": "^12.0.1",
    "cpx": "^1.2.1",
    "ecstatic": "^1.3.1",
    "gulp": "^3.9.0",
    "handlebars": "^4.0.5",
    "handlebars-intl": "^1.1.1",
    "js-yaml": "^3.4.6",
    "language-tags": "^1.0.3",
    "mkdirp": "^0.5.1",
    "myth": "^1.2.1",
    "normalize.css": "^3.0.2",
    "npm-run-all": "^1.4.0",
    "object-assign": "^4.0.1",
    "query-string": "^1.0.0",
    "rimraf": "^2.4.4",
    "run-parallel": "^1.1.4",
    "through2": "^2.0.0",
    "through2-map": "^2.0.0",
    "vinyl": "^1.1.0",
    "vinyl-buffer": "^1.0.0"
  },
  "devDependencies": {
    "ecstatic-lr": "^1.0.0",
    "gh-pages": "^0.8.0",
    "watchify": "^3.6.1",
    "wtch": "^4.0.1"
  }
}
